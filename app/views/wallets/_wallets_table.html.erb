<table class="table table-hover table-bordered">
  <thead>
  <tr>
    <th colspan="3" style="text-align: center"> Nome</th>
  </tr>
  </thead>
  <tbody>
  <% if !@wallets.empty?  %>
    <% @wallets.each do |wallet|%>
      <tr>
        <td>
          <%= button_tag class: 'btn btn-primary' do%>
            <i class="fa fa-arrow-circle-right"></i>
          <% end %>
        </td>

        <td><%= wallet.name %></td>
        <td class="table-cell-btn-delete">
          <%= form_with model:wallet, id:"form-delete-wallet-#{wallet.id}", method: 'delete' do %>
            <%= button_tag class: 'btn btn-danger', value:wallet.id do %>
              <i class="fa fa-trash"></i>
            <% end %>
          <% end %>
        </td>
      </tr>
    <% end %>
  <% else %>
    <tr>
      <td> <p> No wallets registered </p></td>
    </tr>
  <% end %>
  </tbody>
</table>
<!-- lib/assets/javascripts/wallets_table -->
<%= javascript_include_tag 'wallets_table', media: 'all' %>
